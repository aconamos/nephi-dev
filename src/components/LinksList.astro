---
import Envelope from "../icons/Envelope.astro"
import GitHub from "../icons/GitHub.astro"
import LinkedIn from "../icons/LinkedIn.astro"
---

<div class="card font-mono text-sm md:text-xl links-container">
    <p>
        <a
            href="https://www.linkedin.com/in/nephi-norton/"
            class="align-bottom no-under"
            aria-hidden="true"
            tabindex="-1"
            ><LinkedIn size="24" /></a
        > linkedin/<a
            href="https://www.linkedin.com/in/nephi-norton/"
            aria-label="nephi norton on LinkedIn"
            >Nephi Norton</a
        >
    </p>
    <p>
        <a
            href="https://github.com/aconamos"
            class="align-bottom no-under"
            aria-hidden="true"
            tabindex="-1"
        >
            <GitHub size="24" />
        </a> github/<a
            href="https://github.com/aconamos"
            aria-label="nephi norton on GitHub"
            >aconamos</a
        >
    </p>
    <p>
        <a
            href="mailto:nephi.norton+homepage@gmail.com"
            class="align-bottom no-under"
            aria-hidden="true"
            tabindex="-1"
        >
            <Envelope size="24" />
        </a>gmail/<a
            href="mailto:nephi.norton+homepage@gmail.com"
            aria-label="email for nephi norton"
            >nephi.norton+homepage</a
        >
    </p>
</div>

<style>
    @reference "tailwindcss";

    .links-container p:not(:last-child) {
        @apply mb-2;
    }

    .links-container p a.no-under {
        @apply text-white;
        text-decoration: none;
    }
</style>
